<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q1"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Q1.AppointmentWindow"
        mc:Ignorable="d"
        Title="AppointmentWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="72,44,0,0" TextWrapping="Wrap" Text="Appointment Date" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="416,44,0,0" TextWrapping="Wrap" Text="Appointment Date" VerticalAlignment="Top"/>
        <DatePicker x:Name="Date_DTPKR" HorizontalAlignment="Left" Margin="189,39,0,0" VerticalAlignment="Top"/>

        <materialDesign:TimePicker x:Name="Time_TMPKR" HorizontalAlignment="Left" Margin="535,39,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="72,89,0,0" TextWrapping="Wrap" Text="Notes" VerticalAlignment="Top"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="72,125,206,29" BorderThickness="1,1,1,1" BorderBrush="#FF212121"/>
        <Button x:Name="AddAppointment_BTN" Content="Add" HorizontalAlignment="Left" Margin="662,336,0,0" VerticalAlignment="Top" Width="78.4366666666667" Click="AddAppointment_BTN_Click"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="662,373,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
